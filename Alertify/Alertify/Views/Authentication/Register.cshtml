@model Alertify.ViewModels.Authentication.RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Crear Cuenta - Alertify</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light d-flex align-items-center justify-content-center min-vh-100">

    <main class="bg-white p-5 rounded shadow-sm w-100" style="max-width: 500px;">

        <div class="text-center mb-4">
            <h1 class="h3 mb-1 fw-normal">Crear Cuenta</h1>
            <p class="text-muted small">Únete a Alertify y gestiona tus emergencias</p>
        </div>

        <form asp-controller="Authentication" asp-action="Register" method="post">

            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                <div class="alert alert-danger py-2 text-center small" role="alert">
                    Por favor corrige los errores del formulario.
                </div>
            }

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }

            <div class="row g-2 mb-2">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="FirstName" class="form-control" placeholder="Nombre" required />
                        <label asp-for="FirstName">Nombre</label>
                        <span asp-validation-for="FirstName" class="text-danger small" style="font-size: 0.75rem;"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="FirstLastName" class="form-control" placeholder="Apellido" required />
                        <label asp-for="FirstLastName">1er Apellido</label>
                        <span asp-validation-for="FirstLastName" class="text-danger small" style="font-size: 0.75rem;"></span>
                    </div>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="SecondLastName" class="form-control" placeholder="Apellido Materno" />
                <label asp-for="SecondLastName">2do Apellido (Opcional)</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com" required />
                <label asp-for="Email">Correo Electrónico</label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Phone" type="tel" class="form-control" placeholder="Teléfono" />
                <label asp-for="Phone">Teléfono / Celular</label>
                <span asp-validation-for="Phone" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" required />
                <label asp-for="Password">Contraseña</label>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirmar" required />
                <label asp-for="ConfirmPassword">Confirmar Contraseña</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">Registrarse</button>

            <hr class="my-4 text-muted opacity-25">

            <div class="text-center">
                <p class="text-muted small mb-2">¿Ya tienes una cuenta?</p>
                <a href="@Url.Action("Login", "Authentication")" class="btn btn-outline-dark w-100">
                    Iniciar Sesión
                </a>
            </div>

        </form>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>