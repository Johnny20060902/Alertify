<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alertify</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Alertify.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>
<body>
    <header class="p-3 mb-3 border-bottom">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none">
                    <span class="fs-4 fw-bold">Alertify</span>
                </a>
                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0 ms-lg-3">
                    <li><a asp-controller="Home" asp-action="Index" class="nav-link px-2 link-body-emphasis">Inicio</a></li>
                    <li><a asp-controller="Emergency" asp-action="Index" class="nav-link px-2 link-body-emphasis">Emergencias</a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li><a asp-controller="User" asp-action="Index" class="nav-link px-2 link-body-emphasis">Usuarios</a></li>
                        <li><a asp-controller="Station" asp-action="Index" class="nav-link px-2 link-body-emphasis">Estaciones</a></li>
                    }
                </ul>

                <div class="dropdown text-end">
                    <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        @if (!string.IsNullOrEmpty(User.FindFirst("ProfilePhotoURL")?.Value))
                        {
                            <img src="@User.FindFirst("ProfilePhotoURL")?.Value" alt="Foto perfil" width="32" height="32" class="rounded-circle">
                        }
                        else
                        {
                            <span class="rounded-circle bg-secondary text-white d-inline-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                @User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value?.Substring(0, 1).ToUpper()
                            </span>
                        }
                    </a>
                    <ul class="dropdown-menu text-small">
                        <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index">Mi Perfil</a></li>
                        <li><a class="dropdown-item" asp-controller="Authentication" asp-action="ChangePassword">Cambiar Contraseña</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-controller="Authentication" asp-action="Logout" method="post" class="dropdown-item p-0">
                                <button type="submit" class="btn btn-link dropdown-item">Cerrar Sesión</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Alertify - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
