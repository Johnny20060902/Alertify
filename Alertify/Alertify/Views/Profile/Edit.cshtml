@model Alertify.ViewModels.Profile.EditProfileViewModel
@{
    ViewData["Title"] = "Editar Perfil";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header text-black">
                    <h4 class="mb-0">Editar Perfil</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                        {
                            <div class="alert alert-danger" role="alert">
                                Por favor corrige los errores del formulario.
                            </div>
                        }

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label">Nombre</label>
                                <input asp-for="FirstName" class="form-control" placeholder="Nombre" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="FirstLastName" class="form-label">Primer Apellido</label>
                                <input asp-for="FirstLastName" class="form-control" placeholder="Primer apellido" />
                                <span asp-validation-for="FirstLastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SecondLastName" class="form-label">Segundo Apellido</label>
                            <input asp-for="SecondLastName" class="form-control" placeholder="Segundo apellido (opcional)" />
                            <span asp-validation-for="SecondLastName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NationalID" class="form-label">Cédula de Identidad (CI)</label>
                            <input asp-for="NationalID" class="form-control" placeholder="Ej: 1234567" />
                            <span asp-validation-for="NationalID" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Phone" class="form-label">Teléfono / Celular</label>
                            <input asp-for="Phone" class="form-control" placeholder="Ej: 71234567" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Guardar Cambios
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}